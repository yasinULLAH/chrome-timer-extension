{
  "manifest_version": 3,
  "name": "Focus Timer with Ambient Sounds",
  "version": "1.3",
  "description": "A Pomodoro timer with ambient sounds to help you focus.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "offscreen"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
